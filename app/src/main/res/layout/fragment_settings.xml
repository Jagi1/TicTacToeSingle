<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <ImageButton
        android:id="@+id/difficulty_button1"
        android:layout_width="0pt"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0pt"
        app:layout_constraintHeight_percent="0.1"
        android:src="@drawable/shape_button1"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@id/difficulty_button2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView android:id="@+id/difficulty_button1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EASY"
        android:elegantTextHeight="true"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toStartOf="@id/difficulty_button1"
        app:layout_constraintEnd_toEndOf="@id/difficulty_button1"
        app:layout_constraintTop_toTopOf="@id/difficulty_button1"
        app:layout_constraintBottom_toBottomOf="@id/difficulty_button1"/>

    <ImageButton
        android:id="@+id/difficulty_button2"
        android:layout_width="0pt"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0pt"
        app:layout_constraintHeight_percent="0.1"
        android:src="@drawable/shape_button2"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView android:id="@+id/difficulty_button2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MEDIUM"
        android:textColor="@color/colorText"
        android:elegantTextHeight="true"
        app:layout_constraintStart_toStartOf="@id/difficulty_button2"
        app:layout_constraintEnd_toEndOf="@id/difficulty_button2"
        app:layout_constraintTop_toTopOf="@id/difficulty_button2"
        app:layout_constraintBottom_toBottomOf="@id/difficulty_button2"/>

    <ImageButton
        android:id="@+id/difficulty_button3"
        android:layout_width="0pt"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0pt"
        app:layout_constraintHeight_percent="0.1"
        android:src="@drawable/shape_button3"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@id/difficulty_button2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView android:id="@+id/difficulty_button3_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HARD"
        android:textColor="@color/colorText"
        android:elegantTextHeight="true"
        app:layout_constraintStart_toStartOf="@id/difficulty_button3"
        app:layout_constraintEnd_toEndOf="@id/difficulty_button3"
        app:layout_constraintTop_toTopOf="@id/difficulty_button3"
        app:layout_constraintBottom_toBottomOf="@id/difficulty_button3"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shape_line1"
        app:layout_constraintStart_toEndOf="@id/difficulty_button1"
        app:layout_constraintTop_toTopOf="@id/difficulty_button1"
        app:layout_constraintBottom_toBottomOf="@id/difficulty_button2"
        app:layout_constraintEnd_toStartOf="@id/difficulty_button2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shape_line1"
        app:layout_constraintStart_toEndOf="@id/difficulty_button2"
        app:layout_constraintTop_toTopOf="@id/difficulty_button3"
        app:layout_constraintBottom_toBottomOf="@id/difficulty_button2"
        app:layout_constraintEnd_toStartOf="@id/difficulty_button3"/>

    <ImageView android:id="@+id/settings_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="@id/difficulty_button3"
        app:layout_constraintBottom_toTopOf="@id/difficulty_button3"/>

</androidx.constraintlayout.widget.ConstraintLayout>